{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "./",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "lib": ["es2015"],
    "paths": {
      "@example/*": ["src/example/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "exclude": ["node_modules"]
}
